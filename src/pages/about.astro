---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import '../styles/global.css';
const pageTitle = "About Me";

const identity = {
  firstName: "Rachita",
  country: "India",
  occupation: "Student",
  hobbies: ["Drawing", "Reading Books", "Coding"],
};

const skills = ["HTML", "CSS", "JavaScript", "React", "Astro", "Writing Docs"];
const happy = true;
const finished = true;
const goal = 3;


const skillColors = ["#ff6b6b", "#f59e0b", "#10b981", "#3b82f6", "#8b5cf6", "#ec4899"];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>

    <style>
      body {
        font-family:'Times New Roman', Times, serif;
        margin: 0 auto;
        max-width: 80ch;
        padding: 1rem;
        line-height: 1.6;
        color: #111;
        transition: color 0.3s ease;
        text-align: left; 
      }

      html.dark body {
        color: #ffffff; 
      }

      h1 {
        font-family:'Times New Roman', Times, serif
        font-size: 2rem;
        color: #ffffff;
        margin-top: 1rem;
        margin-bottom: 1rem;
        text-align: left; 
      }

      p {
        font-size: 1.1rem;
        font-family: 'Times New Roman', Times, serif;
      }

      ul {
        list-style: none;
        padding-left: 0;
      }

      .skill {
        font-family: 'Times New Roman', Times, serif;
        display: inline-block;
        margin: 0.3rem;
        padding: 0.5rem 1rem;
        border-radius: 1rem;
        font-weight: bold;
        color: white;
        cursor: pointer;
        transition: 1s;
      }

      .skill:hover {
        transform: scale(1.2);
        box-shadow: 0 4px 15px rgba(0,0,0,0.3);
      }

      .hobbies {
        font-family: 'Times New Roman', Times, serif;
        font-weight: bold;
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
      }

      .hobby {
        background-color: #4c1d95;
        color: white;
        padding: 0.4rem 0.8rem;
        border-radius: 0.5rem;
        font-size: 0.95rem;
        transition: 1s;
      }

      .hobby:hover {
        transform: scale(1.1);
      }

      .stats {
        margin-top: 1rem;
        font-style: italic;
      }
    </style>
  </head>

  <body>
    <Header/>

    <h1>{pageTitle}</h1>

    <p>Hello! I'm <strong>{identity.firstName}</strong>, a tech enthusiast passionate about coding, web development, and learning new technologies. I love exploring programming languages, building projects, and sharing knowledge with others.</p>


    <p>My hobbies </p>
    <div class="hobbies">
      {identity.hobbies.map(hobby => <span class="hobby">{hobby}</span>)}
    </div>

    <p>My skills</p>
    <ul>
      {skills.map((skill, index) => (
        <li class="skill" style={`background-color: ${skillColors[index % skillColors.length]}`}>
          {skill}
        </li>
      ))}
    </ul>

    <div class="stats">
      {happy && <p>I am happy to be learning Astro!</p>}
    </div>

    <Footer/>

    <script is:inline>
      const themeToggle = document.getElementById('themeToggle');
      if(themeToggle) {
        themeToggle.addEventListener('click', () => {
          document.documentElement.classList.toggle('dark');
        });
      }
    </script>
  </body>
</html>
